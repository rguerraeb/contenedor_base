{% extends '@App/Backend/base.html.twig' %}

{% block body %}
<!-- Content Header (Page header) -->

<!-- Main content -->
<section class="content">

	{{ render(controller("AppBundle:Frontend/Staff:headerPoints")) }}

	<div class="row">
		<div class="col-md-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Listado De Punto De Ventas</h3>
				</div>
				<div class="box-body">
					<table class="table table-responsive table-hover dataTable">
						<thead>
							<tr>
								<th>ID</th>
								<th>Nombre del Establecimiento</th>
								<th>Estado</th>
								<th>Fecha Creaci&oacute;n</th>
							</tr>
						</thead>
						<tbody>
							{% for item in list %}
							<tr>
								<td>{{ item.idStaffPointOfSale }}</td>
								<td>{{ item.pointOfSale.businessName }}</td>
								<td>{% if item.status == 'ACTIVE' %}
									<span class="label label-success">ACTIVO</span>
								{% else %}
									<span class="label label-warning">{{ item.status }}</span>
								{% endif %}</td>
								<td>{{ item.createdAt | date('d-m-Y H:i:s') }}</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>


	</div>

</section>
<!-- /.content -->
{% endblock %}

{% block extra_css %}
<link rel="stylesheet"
	href="{{ asset('bundles/adminLTE/plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block extra_scripts %}

<script src="{{ asset('bundles/adminLTE/plugins/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('bundles/adminLTE/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>


<script type="text/javascript">
	$(function() {
		$('.dataTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
            }
        } );	
	});
</script>

{% endblock %}