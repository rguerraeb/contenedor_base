{% extends '@App/Backend/base.html.twig' %}

{% block body %}

<!-- Main content -->
<section class="content">
 
	{{ render(controller("AppBundle:Frontend/Staff:headerPoints")) }}

	<div class="row">
		<div class="col-xs-12">

			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">Notificaciones y Promociones</h3>
				</div>

				<div id="myCarousel" class="carousel slide" data-ride="carousel" style="background-image: url('{{ asset('images/frontend/bg_maderas_azules.jpg') }}');">
					<!-- Wrapper for slides -->
					<div class="carousel-inner">
						{% for item in news %}
							<div class="item {{ (item.title == "Bienvenida") ? 'active' : '' }}">
								<img src="{{ asset('images/news/'~item.image) }}" alt="{{ item.title }}" style="width:100%;">
								<div class="carousel-caption" style="background-color: rgba(0, 0, 0, 0.4);">
									<h3>{{ item.title }}</h3>
									<p>{{ item.content | raw }}</p>
								</div>
							</div>
						{% endfor %}
					</div>

					<!-- Left and right controls -->
					<a class="left carousel-control" href="#myCarousel" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
					<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#myCarousel" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
					<span class="sr-only">Next</span>
					</a>
				</div>
				

			</div>
			
			<!-- /.box -->
		</div>
	</div>

</section>
<!-- /.content -->
{% endblock %}

{% block extra_scripts %}


{% endblock %}