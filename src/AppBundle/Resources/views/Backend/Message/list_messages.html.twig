$(document).ready(function() {
	$('.dataTable').DataTable({
			"language": idioma_espa√±ol,
			"stateSave": true,
			"dom": 'Bfrtip',
			"buttons": [
				'csv', 'pdf', 'excel'
			]
		});	
});
</script>
{% endblock %}