{{ form_start(form) }}
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.sku, "Código") }}
                    {{form_widget(form.sku, {'attr': {'class': 'required form-control' }}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.skuCode, "Número de Motor") }}
                    {{form_widget(form.skuCode, {'attr': {'class': 'required form-control' }}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.pointOfSale, "Punto de Venta") }}
                    {{form_widget(form.pointOfSale, {'attr': {'class': 'required form-control' }}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.price, "Precio") }}
                    {{form_widget(form.price, {'attr': {'class': 'required form-control' }}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.clientName, "Nombre del Cliente") }}
                    {{form_widget(form.clientName, {'attr': {'class': 'required form-control' }}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.clientPhone, "Número del Cliente") }}
                    {{form_widget(form.clientPhone, {'attr': {'class': 'required form-control' }}) }}
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <div class="box-footer">
        <button type="reset"
            onclick="window.location='{{ path('backend_sale') }}'"
            class="btn btn-danger">Cancelar</button>
        <button type="submit" class="btn btn-primary pull-right">
            Guardar Datos
        </button>
    </div>
{{ form_end(form) }}