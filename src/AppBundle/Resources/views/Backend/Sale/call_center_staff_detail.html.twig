<div class="row staff-search-panel">
    <div class="col-md-12">
        <div class="box box-warning collapsed-box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <i class='fa fa-search'></i>
                    B&uacute;squeda Ventas
                </h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
            <form
                class="form-horizontal search-form"
                method="get"
                action="{{ path(
                    'backend_sale_staff',
                    {id: staff.staffId}
                ) }}">
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-sm-4 input-panel date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input
                                class="form-control"
                                id="issued-at"
                                placeholder="Fecha de FacturaciÃ³n"
                                type="date"
                                name="issuedAt">
                        </div>

                        <div class="col-sm-4 input-panel">
                            <input class="form-control" placeholder="No. Motor" type="text" name="skuCode">
                        </div>

                        <div class="col-sm-4 input-panel">
                            <select name="skuCategory" class="form-control">
                                <option value="">
                                    -- Producto --
                                </option>
                                {% for skuCategory in skuCategories %}
                                    <option value="{{ skuCategory.skuCategoryId }}">
                                        {{ skuCategory.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="col-sm-4 input-panel">
                            <select name="skuCc" class="form-control">
                                <option value="">
                                    -- Cc --
                                </option>
                                {% for cc in ccs %}
                                    <option value="{{ cc.cc }}">
                                        {{ cc.cc }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="col-sm-4 input-panel">
                            <input class="form-control" placeholder="Puntos" type="text" name="points">
                        </div>

                        <div class="col-sm-4 input-panel">
                            <input class="form-control" placeholder="No. Factura" type="text" name="invoiceNumber">
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a class="btn btn-danger pointer-link remove-filters">
                        <i class="fa fa-remove"></i>
                        Quitar filtros
                    </a>
                    <button type="submit" class="btn btn-info pull-right" id="sales-search">
                        <i class='fa fa-search'></i>
                        Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-header">
                <h3 class="box-title">
                    <i class='fa fa-list'></i>
                    Listado de ventas
                </h3>
            </div>

            <div class="box-body">
                <div class="table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>No. Motor</th>
                                <th>Producto</th>
                                <th>Cilindraje</th>
                                <th>Puntos</th>
                                <th>No. Factura</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="box-footer clearfix">
            </div>
        </div>
    </div>
</div>
