{% extends '@App/Backend/base.html.twig' %}

{% block title %}
    LoyaltyV2 | Backend | Mensaje
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Mensajes</h1>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('backend_main') }}">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li class="">
                <a href="{{ path('backend_sms_incoming') }}">
                    Mensajes
                </a>
            </li>
            <li class="active">Mensaje #{{ smsIncoming.smsIncomingId }}</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <h3 class="profile-username text-center">
                            Recibido de
                        </h3>

                        <p class="text-muted text-center">
                            {{ smsIncoming.staff.name }}
                        </p>

                        <p class="text-muted text-center">
                            {{ smsIncoming.staff.jobPosition }}
                        </p>

                        <p class="text-muted text-center">
                            {{ smsIncoming.staff.pointOfSale }}
                        </p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>T&eacute;lefono</b>
                                <a class="pull-right">
                                    {{ smsIncoming.staff.phoneMain }}
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>Email</b>
                                <a class="pull-right">
                                    {{ smsIncoming.staff.email }}
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>DPI</b>
                                <a class="pull-right">
                                    {{ smsIncoming.staff.citizenId }}
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="profile-username text-center">
                            Mensaje
                        </h3>

                        <p class="text-muted text-center">
                            # {{ smsIncoming.smsIncomingId }}
                        </p>
                    </div>
                    <div class="box-body box-profile">
                        <strong>Enviado a</strong>
                        <p class="text-muted">
                            {{ smsIncoming.phone }}
                        </p>
                        <hr>

                        <strong>Mensaje</strong>
                        <p class="text-muted">
                            {{ smsIncoming.smsString }}
                        </p>
                        <hr>

                        <strong>Resultado</strong>
                        <p class="text-muted">
                            {{ smsIncoming.parseResult }}
                        </p>
                        <hr>

                        <strong>Fecha</strong>
                        <p class="text-muted">
                            {{ smsIncoming.createdAt|date('Y-m-d H:i:s') }}
                        </p>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}