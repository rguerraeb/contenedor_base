<div class="box box-primary">
    <div class="box-body box-profile">
        <h3 class="profile-username text-center">
            {{ promo }}
        </h3>

        <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
                <b>Estado</b>
                <a class="pull-right">
                    {{ promo.status }}
                </a>
            </li>
            <li class="list-group-item">
                <b>Fecha inicio</b>
                <a class="pull-right">
                    {% if promo.startDate %}
                        {{ promo.startDate|date('Y-m-d H:i') }}
                    {% else %}
                        N/A
                    {% endif %}
                </a>
            </li>
            <li class="list-group-item">
                <b>Fecha fin</b>
                <a class="pull-right">
                    {% if promo.endDate %}
                        {{ promo.endDate|date('Y-m-d H:i') }}
                    {% else %}
                        N/A
                    {% endif %}
                </a>
            </li>
            <li class="list-group-item">
                <b>Categor&iacute;a</b>
                <a class="pull-right">
                    {{ promo.promoCategory }}
                </a>
            </li>
        </ul>
    </div>
</div>