<div class="row">
    <div class="col-xs-12">
        <div class="box box-success">
            <div class="box-header">
                <h3 class="box-title">
                    Listado de Empleados
                </h3>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>NIT</th>
                        <th>DPI</th>
                        <th>Tel&eacute;fono</th>
                        <th>Puesto</th>
                    </tr>

                    {% for staff in entities %}
                        <tr>
                            <td>{{ staff.staffId }}</td>
                            <td>{{ staff.name }}</td>
                            <td>{{ staff.taxIdentifier }}</td>
                            <td>{{ staff.citizenId }}</td>
                            <td>{{ staff.phoneMain }}</td>
                            <td>{{ staff.jobPosition.name }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
                {{ knp_pagination_render(entities) }}
            </div>
        </div>
    </div>
</div>