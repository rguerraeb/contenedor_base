							include(
								'@App/Backend/create_modal.html.twig',
								{
									'title': 'Entrada',
									'form': form,
									'formPath': '@App/Backend/SiteContent/form_news.html.twig'
								}
							)
						}}
					{% endif %}
		
					{% if permits["rp"] %}
						{{ include('@App/Backend/SiteContent/list.html.twig', { 'list': list }) }}
					{% endif %}
		
					{{ include(
						'@App/Backend/confirm_modal.html.twig',
						{
